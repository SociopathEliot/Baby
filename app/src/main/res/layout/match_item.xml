<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#171717"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Лига -->
        <TextView
            android:id="@+id/tvLeague"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_league_chip"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:paddingHorizontal="12dp"
            android:text="Очень‑очень длинное название лиги"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Статус -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvLeague"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Время -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#FFF"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tvLeague"
            app:layout_constraintTop_toBottomOf="@+id/tvLeague"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Описание матча -->
        <TextView
            android:id="@+id/tvMatchDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ruby White Team – Mahe Megalo Strikers"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:gravity="end"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/tvTime"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
